
<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle fw-bold" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 18px; padding: 12px 24px;">
        Търсене на части по категория
    </button>
    <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" href="@Url.Action("CategoryParts", "Category", new { categoryId = category.Id })">@category.Name</a>
            </li>
        }
    </ul>
</div>